<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="org.eclipse.gyrex.http.applications.managerapp"
         name="HTTP Application Manager Application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="1"
            thread="any"
            visible="false">
         <run
               class="org.eclipse.gyrex.http.internal.HttpAppManagerApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.gyrex.server.roles">
      <role
            id="org.eclipse.gyrex.http.appmanager"
            name="Gyrex HTTP Application Manager">
         <requireApplication
               applicationId="org.eclipse.gyrex.http.applications.managerapp">
         </requireApplication>
      </role>
   </extension>

</plugin>
